<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="#BEF781">

    <!-- Name Label -->
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/teamNameLabel"
              android:paddingLeft="10dip"
              android:paddingRight="10dip"
              android:paddingTop="10dip"
              android:textSize="25sp"
        android:textColor="#000000" />

    <!-- Input Name -->
    <EditText android:id="@+id/inputName"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dip"
              android:layout_marginBottom="15dip"
              android:textSize="25sp"
              android:singleLine="true"
        android:textColor="#000000" />

    <!-- Team Label -->
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/tournamentSelectLabel"
              android:paddingLeft="10dip"
              android:paddingRight="10dip"
              android:paddingTop="10dip"
        android:textSize="25sp"
        android:textColor="#000000" />

    <!-- Input Team -->
    <!--<EditText android:id="@+id/inputTeam"-->
              <!--android:layout_width="fill_parent"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:layout_margin="5dip"-->
              <!--android:layout_marginBottom="15dip"-->
              <!--android:singleLine="true"-->
              <!--android:inputType="numberDecimal"/>-->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tourSpinner"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="60dip">
        <!-- Button Create Player -->
        <Button android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnSave"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:textSize="25sp"
                android:layout_gravity="left"
                android:background="#5F4C0B"
                android:textColor="#BEF781" />

        <TextView
            android:id="@+id/centerPoint"
            android:text=""
            android:layout_width="35dip"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <!-- Button Create Player -->
        <Button android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnDelete"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="25sp"
                android:layout_gravity="right"
                android:background="#5F4C0B"
                android:textColor="#BEF781" />
    </LinearLayout>

</LinearLayout>
