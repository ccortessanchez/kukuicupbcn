<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
              android:background="#5F4C0B"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formName"
            android:text="Form"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:textColor="#BEF781"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/formReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Reward"
            android:layout_toLeftOf="@+id/pointsImg"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textColor="#BEF781"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Points"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_vertical"
            android:textColor="#BEF781"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/badgeImg"
            android:src="@mipmap/badge_base"
            android:visibility="invisible"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quest1"
            android:text="Question 1"
            android:textColor="#BEF781"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/question1RG"
            >

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer1a"
                android:text="Answer a"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer1b"
                android:text="Answer b"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer1c"
                android:text="Answer c"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quest2"
            android:text="Question 2"
            android:textColor="#BEF781"
            android:textStyle="bold" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/question2RG">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer2a"
                android:text="Answer a"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer2b"
                android:text="Answer b"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer2c"
                android:text="Answer c"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quest3"
            android:text="Question 3"
            android:textColor="#BEF781"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/question3RG"
            >

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer3a"
                android:text="Answer a"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer3b"
                android:text="Answer b"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer3c"
                android:text="Answer c"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        >

        <Button
            android:id="@+id/primaryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F4C0B"
            android:background="#BEF781"
            android:text="Finish"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textStyle="bold"
            tools:textStyle="bold" />

    </LinearLayout>
    </LinearLayout>
    </ScrollView>


</LinearLayout>